{
    "name": "Jupyter Devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", 
                "ms-toolsai.jupyter"
            ]
        }
    },
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    },
    "forwardPorts": [8888],
    "postCreateCommand": "python -m pip install --upgrade pip",
    "remoteUser": "root" 
}
